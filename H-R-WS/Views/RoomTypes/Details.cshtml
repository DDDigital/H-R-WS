@model H_R_WS.Models.RoomType

@{
    ViewData["Title"] = "Details";
}

<!-- Початок заголовку -->
<div class="page-header">
    <h1 class="title">Категорія кімнати</h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index">Категорії кімнат</a></li>
        <li class="active">Детальніше</li>
    </ol>
    <div class="right">
        <a asp-action="edit" asp-route-id="@Model.ID" class="btn btn-option3 btn-lg">Редагувати</a>
    </div>
</div>
<!-- Кінець заголовку -->
<!-- Почеток контейнеру -->
<div class="container-padding">
    <div class="row">
        <div class=" col-md-6">
            <div class="panel panel-default">
                <div class="panel-title">
                    Деталі категорії

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="col-sm-4">
                                <b>Назва: </b>
                            </p>
                            <p class="col-sm-8">
                                @Model.Name
                            </p>
                        </div>


                        <div class="col-sm-12">
                            <p class="col-sm-4">
                                <b>Ціна ($): </b>
                            </p>
                            <p class="col-sm-8">
                                @Model.BasePrice
                            </p>
                        </div>

                        <div class="col-sm-12">
                            <p class="col-sm-4">
                                <b>Описання: </b>
                            </p>
                            <p class="col-sm-8">
                                @Model.Description
                            </p>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- Початок панелі -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-title">
                    Кімнати цієї категорії
                </div>
                <div class="panel-body table-responsive">
                    <table id="example0" class="table-bordered display">
                        <thead>
                            <tr>
                                <th>Номер</th>
                                <th>Ціна</th>
                                <th>Доступна</th>
                                <th>Описання</th>
                                <th>Макс. гостей</th>
                                <th>Дія</th>
                            </tr>
                        </thead>



                        <tbody>
                            @if (ViewBag.CategoryRooms != null)
                            {
                                @foreach (var item in ViewBag.CategoryRooms as IEnumerable<Room>)
                                {
                                    <tr>
                                        <td>
                                            @item.Number
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @Html.Raw(item.Available ? "Yes" : "No")
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            @item.MaximumGuests
                                        </td>

                                        <td>

                                            <a asp-action="Details" asp-controller="Rooms" asp-route-id="@item.ID">Дивитись</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- Кінець панелі -->

    </div>
</div>

@section Scripts{
    <!-- ================================================
    Data Tables
    ================================================ -->
    <script src="~/js/datatables/datatables.min.js"></script>

    <script>
            $(document).ready(function () {
                $('#example0').DataTable();
            });</script>

    <script>
            $(document).ready(function () {
                var table = $('#example').DataTable({
                    "columnDefs": [
                        { "visible": false, "targets": 2 }
                    ],
                    "order": [[2, 'asc']],
                    "displayLength": 25,
                    "drawCallback": function (settings) {
                        var api = this.api();
                        var rows = api.rows({ page: 'current' }).nodes();
                        var last = null;
                        api.column(2, { page: 'current' }).data().each(function (group, i) {
                            if (last !== group) {
                                $(rows).eq(i).before(
                                    '<tr class="group"><td colspan="5">' + group + '</td></tr>'
                                );
                                last = group;
                            }
                        });
                    }
                });
                // Впорядкування за групами
                $('#example tbody').on('click', 'tr.group', function () {
                    var currentOrder = table.order()[0];
                    if (currentOrder[0] === 2 && currentOrder[1] === 'asc') {
                        table.order([2, 'desc']).draw();
                    }
                    else {
                        table.order([2, 'asc']).draw();
                    }
                });
            });
    </script>

}